<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="menu" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.st1hy.simplecalculator.control.MenuController">
    <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Menu mnemonicParsing="false" text="%menu.file">
            <MenuItem fx:id="close" mnemonicParsing="false" onAction="#handleClose" text="%menu.file.close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="%menu.edit">
            <MenuItem mnemonicParsing="false" text="%menu.edit.delete" onAction="#handleDelete"/>
        </Menu>
        <Menu mnemonicParsing="false" text="%menu.help">
            <MenuItem mnemonicParsing="false" text="%menu.help.about" onAction="#handleAbout"/>
        </Menu>
    </MenuBar>
</AnchorPane>
